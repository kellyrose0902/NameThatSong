<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_choose_quiz"
    tools:context="com.example.kelly.namethatsong.ChooseQuiz">


    <LinearLayout

        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#effcff"
        android:padding="16dp"
        >

        <android.support.v7.widget.CardView

            android:id="@+id/cv1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:clickable="true"


            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src = "@drawable/rock"
                    android:id="@+id/icon1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:id="@+id/type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Pop"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/icon1"
                    />
                <TextView
                    android:id="@+id/caption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guess your favorite songs"
                    android:layout_below="@+id/type1"
                    android:layout_alignLeft="@+id/type1"
                    android:layout_alignStart="@+id/type1" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView

            android:id="@+id/cv2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:clickable="true"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src = "@drawable/rock"
                    android:id="@+id/icon2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:id="@+id/type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Rock/Metal"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/icon2"
                    />
                <TextView
                    android:id="@+id/caption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guess your favorite songs"
                    android:layout_below="@+id/type2"
                    android:layout_alignLeft="@+id/type2"
                    android:layout_alignStart="@+id/type2" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:id="@+id/cv3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:clickable="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src = "@drawable/rock"
                    android:id="@+id/icon3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:id="@+id/type3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Disney"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/icon3"
                    />
                <TextView
                    android:id="@+id/caption3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guess your favorite songs"
                    android:layout_below="@+id/type3"
                    android:layout_alignLeft="@+id/type3"
                    android:layout_alignStart="@+id/type3" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:id="@+id/cv4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:clickable="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src = "@drawable/rock"
                    android:id="@+id/icon4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:id="@+id/type4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Instrumental"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/icon4"
                    />
                <TextView
                    android:id="@+id/caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guess your favorite songs"
                    android:layout_below="@+id/type4"
                    android:layout_alignLeft="@+id/type4"
                    android:layout_alignStart="@+id/type4" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>



    </LinearLayout>
</RelativeLayout>


